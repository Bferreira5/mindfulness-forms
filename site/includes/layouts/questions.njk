        </div>
    </section>
    <div class="fixed flex justify-between bottom-0 right-0 w-3/4 py-5 px-6 bg-white border-t-2 border-iron">
        <a href="/narratives/narratives-1/questions{{ prev }}" class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">Previous</a>
        <div class="w-full mx-8 flex justify-center">
            <div class="flex w-full">

                {% for post in collections.question %}

                    <div class="flex-grow-0 self-center">

                    {% if page.url == post.url %} {% endif %}
                        <a href="{{ post.url }}" class="{% if page.url == post.url %} bg-blue-500 {% endif %} w-4 h-4 bg-iron mx-auto rounded-full text-lg text-white flex items-center">
                            <span class="text-white text-center w-full"></span>
                        </a>
                    </div>
                    <div class="w-1/6 align-center items-center align-middle content-center flex">
                        <div class="w-full bg-iron items-center align-middle align-center flex-1">
                            <div class="leading-none h-1" style="width: 100%"></div>
                        </div>
                    </div>
                {% endfor %}

                <div class="flex-grow-0 self-center">
                    <div class="w-4 h-4 bg-iron mx-auto rounded-full text-lg text-white flex items-center">
                        <span class="text-white text-center w-full"></span>
                    </div>
                </div>
            </div>
        </div>
        <a href="/narratives/narratives-1/questions{{ next }}" class=" bg-blue-400 hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">Next</a>
    </div>
